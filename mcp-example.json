{
   "mcpServers":{
      "context7":{
         "type":"streamable-http",
         "url":"https://mcp.context7.com/mcp",
         "disabled":false,
         "alwaysAllow":[
            "resolve-library-id",
            "query-docs"
        ]
      },
      "memory":{
         "command":"npx",
         "args":[
            "-y",
            "@modelcontextprotocol/server-memory"
         ],
         "disabled":false,
         "alwaysAllow":[
            "create_entities",
            "create_relations",
            "add_observations",
            "delete_entities",
            "delete_observations",
            "delete_relations",
            "read_graph",
            "search_nodes",
            "open_nodes"
         ]
      },
      "oraios/serena":{
         "type":"stdio",
         "command":"uvx",
         "args":[
            "--from",
            "git+https://github.com/oraios/serena",
            "serena",
            "start-mcp-server",
            "--context",
            "ide",
            "--project",
            "/c/Users/kondr/_projects/HH-clicker"
         ],
         "disabled":false,
         "stdlog":"C:\\Users\\kondr\\AppData\\Local\\Temp\\_MCP\\serena.log",
         "alwaysAllow":[
            "list_dir",
            "find_file",
            "replace_content",
            "search_for_pattern",
            "get_symbols_overview",
            "find_symbol",
            "find_referencing_symbols",
            "replace_symbol_body",
            "insert_after_symbol",
            "insert_before_symbol",
            "rename_symbol",
            "write_memory",
            "read_memory",
            "list_memories",
            "delete_memory",
            "edit_memory",
            "activate_project",
            "get_current_config",
            "check_onboarding_performed",
            "onboarding",
            "think_about_collected_information",
            "think_about_task_adherence",
            "think_about_whether_you_are_done",
            "initial_instructions"
         ]
      },
      "sequentialthinking":{
         "type":"stdio",
         "command":"node",
         "args":[
            "../mcp-sequentialthinking-tools/dist/index.js"
         ],
         "stdlog":"C:\\Users\\kondr\\AppData\\Local\\Temp\\_MCP\\sequentialthinking.log",
         "disabled":false,
         "alwaysAllow":[
            "sequentialthinking_tools"
         ]
      },
      "filesystem": {
         "type": "stdio",
         "command": "npx",
         "args": [
            "-y",
            "@modelcontextprotocol/server-filesystem",
            "C:\\Users\\kondr\\_projects\\HH-clicker"
         ],
         "disabled": false,
         "alwaysAllow": ["list_dir", "find_file", "read_file", "write_file", "delete_file"]
      },
      "puppeteer": {
         "type": "stdio",
         "command": "npx",
         "args": [
            "-y",
            "@modelcontextprotocol/server-puppeteer"
         ],
         "disabled": true,
         "alwaysAllow":[
            "puppeteer_navigate",
            "puppeteer_screenshot",
            "puppeteer_click",
            "puppeteer_fill",
            "puppeteer_select",
            "puppeteer_hover",
            "puppeteer_evaluate"
         ]
      }
   }
}